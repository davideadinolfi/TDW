{% extends 'backoffice/layout.twig' %}

{% block content %}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Lista {{ current_entity|capitalize }}</h5>
                <a href="admin.php?entity={{ current_entity }}&action=create" class="btn btn-primary">
                    <i class="feather-plus"></i> Nuovo
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                {% for col in columns %}
                                    <th>{{ col }}</th>
                                {% endfor %}
                                <th>Azioni</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for row in rows %}
                                <tr>
                                    {% for col in columns %}
                                        <td>
                                            {% if col == 'immagine' %}
                                                {% if attribute(row, col) %}
                                                    <img src="public/images/{{ attribute(row, col) }}" alt="Image" style="height: 50px; width: auto; object-fit: cover;">
                                                {% else %}
                                                    <span class="text-muted">No IMG</span>
                                                {% endif %}
                                            {% elseif fk_map[col] is defined %}
                                                {# Use generic FK map #}
                                                {{ fk_map[col][attribute(row, col)] ?? attribute(row, col) }}
                                            {% else %}
                                                {{ attribute(row, col) }}
                                            {% endif %}
                                        </td>
                                    {% endfor %}
                                    <td>
                                        
                                         {# Cerchiamo di indovinare l'ID #}
                                         {% set id_val = attribute(row, 'id') %}
                                         {% if not id_val %}
                                            {# Fallback per tabelle senza 'id' esplicito, prendiamo il primo valore #}
                                            {% set id_val = row|first %}
                                         {% endif %}

                                        <a href="admin.php?entity={{ current_entity }}&action=edit&id={{ id_val }}" class="btn btn-sm btn-info" title="Modifica">
                                            <i class="feather-edit"></i>
                                        </a>
                                        <a href="admin.php?entity={{ current_entity }}&action=delete&id={{ id_val }}" class="btn btn-sm btn-danger" onclick="return confirm('Sei sicuro di voler eliminare questo elemento?');" title="Elimina">
                                            <i class="feather-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="{{ columns|length + 1 }}" class="text-center">Nessun risultato trovato.</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
